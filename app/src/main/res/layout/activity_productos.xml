<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context="cl.inacap.parenas.evaluacion.Pedidos">


    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/etnombre1"
        android:layout_alignBottom="@+id/etnombre1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:text="Rut del cliente: " />

    <EditText
        android:id="@+id/etnombre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/textView9"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView11"
        android:layout_alignStart="@+id/textView11"
        android:layout_below="@+id/etnombre1"
        android:layout_marginTop="18dp"
        android:text="Fecha de entrega:" />

    <EditText
        android:id="@+id/etproducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/etnombre1"
        android:layout_alignLeft="@+id/etnombre1"
        android:layout_alignRight="@+id/etnombre1"
        android:layout_alignStart="@+id/etnombre1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/etproducto"
        android:layout_marginTop="17dp"
        android:text="ID de Producto:" />

    <EditText
        android:id="@+id/etcantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignEnd="@+id/etproducto"
        android:layout_alignLeft="@+id/etproducto"
        android:layout_alignRight="@+id/etproducto"
        android:layout_alignStart="@+id/etproducto"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView9"
        android:layout_alignStart="@+id/textView9"
        android:layout_below="@+id/etcantidad"
        android:layout_marginTop="18dp"
        android:text="Cantidades" />

    <EditText
        android:id="@+id/etfecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignEnd="@+id/etcantidad"
        android:layout_alignLeft="@+id/etcantidad"
        android:layout_alignRight="@+id/etcantidad"
        android:layout_alignStart="@+id/etcantidad"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView12"
        android:layout_alignStart="@+id/textView12"
        android:layout_below="@+id/etfecha"
        android:layout_marginTop="16dp"
        android:text="Total:" />

    <EditText
        android:id="@+id/etprecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView13"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignLeft="@+id/etfecha"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@+id/etfecha"
        android:ems="10"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="232dp" />

    <Button
        android:id="@+id/ingresar"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView4"
        android:layout_below="@+id/editText"
        android:layout_marginTop="21dp"
        android:text="Ingresar Pedidos"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/revisarproductos"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/borrar1"
        android:layout_alignBottom="@+id/borrar1"
        android:layout_alignEnd="@+id/id1"
        android:layout_marginEnd="23dp"
        android:text="Ver Productos"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/revisarpedidos"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/id1"
        android:layout_alignEnd="@+id/revisarproductos"
        android:text="Ver Pedidos"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/borrar1"
        style="@android:style/Widget.DeviceDefault.Button.Toggle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView17"
        android:layout_below="@+id/id1"
        android:layout_marginStart="22dp"
        android:layout_marginTop="15dp"
        android:elevation="1dp"
        android:text="Borrar Pedidos"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/id1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ingresar"
        android:layout_toEndOf="@+id/borrar1"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/borrar1"
        android:layout_below="@+id/ingresar"
        android:layout_marginTop="21dp"
        android:text="ID del pedido: " />

    /**

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/etprecio"
        android:layout_alignStart="@+id/etprecio"
        android:layout_below="@+id/etprecio"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editText"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignLeft="@+id/textView13"
        android:layout_alignStart="@+id/textView13"
        android:text="Estado: " />

</RelativeLayout>